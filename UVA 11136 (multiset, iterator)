#include <iostream>
#include <cmath>
#include <vector>
#include <string>
#include <sstream>
#include <algorithm>
#include <cstring>
#include <iomanip>
#include <map>
#include <stack>
#include <vector>
#include <set>
#include <queue>
using namespace std;
typedef multiset<int>::iterator it;
multiset<int>bill;

int main() {
	int n;
	while (cin >> n) {
		if (n == 0)
			break;
		bill.clear();
		long long cost = 0;
		for(int j=0;j<n;++j) {
			int t;
			cin >> t;
			int b;
			for(int i=0;i<t;++i) {
				cin >> b;
				bill.insert(b);
			}
			it _min = bill.begin();
			it _max = --bill.end();

			cost += (*_max - *_min);
			bill.erase(_max); bill.erase(_min);
		}
		cout << cost << endl;
	}
	return 0;
}
